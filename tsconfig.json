{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["esnext", "dom", "es2015", "es2016", "es2017", "dom"],
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "baseUrl": "src",
    "outDir": "./build",
    "strict": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}